@using GridMvc.Html
@using SynchrotronHR.Models;
@using SynchrotronHR.Controllers;
@Styles.Render("~/Content/JA-JD.css")
@{
    var jaMasterId = ViewBag.jaMasterId;
    var subKeyId = ViewBag.subKeyId;
    var edit = (JAMasterOtherActivitiesDetail)ViewData["OtherListEdit"];
}
<div>
    <h2><b>แก้ไขหน้าที่อื่น/กิจกรรมอื่น (Other Activities)</b></h2><br />
    @using (Html.BeginForm("Edit_Other", "JobAssignment", new { id = subKeyId }, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <table>

            <tr>
                <td align="right">
                    <label class="col-form-label">รายละเอียด:</label>
                </td>
                <td>
                    &nbsp;&nbsp;&nbsp;
                    <textarea name="taOtherDetails" id="taOtherDetails" style="width:400px;height:68px" required>
                        @edit.descriptionOther
                    </textarea>
                    <br /><br />
                </td>
            </tr>

            <tr>
                <td align="right">
                    <label class="col-form-label">เป้าหมาย:</label>
                </td>
                <td>
                    &nbsp;&nbsp;&nbsp;
                    <textarea name="taOtherGoal" id="taOtherGoal" style="width:400px;height:68px" required>@edit.goal</textarea>
                    <br /><br />
                </td>
            </tr>

            <tr>
                <td align="right">
                    <label class="col-form-label">น้ำหนัก:</label>
                </td>
                <td>
                    &nbsp;&nbsp;&nbsp;
                    <input type="number" step="0.01" name="txtOtherWeight" id="txtOtherWeight" style="width:75px" value="@edit.weight" required />

                </td>

            </tr>

            <tr>
                <td>
                    <br />
                    <br />
                </td>
                <td align="right">
                    <br />
                    <br />
                    <div>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="history.go(-1); return false;" href="#">Cancel</button>
                        <button type="submit" class="btn btn-primary">OK</button>
                    </div>
                </td>
            </tr>
        </table>


    }
</div>





