@using GridMvc.Html
@using SynchrotronHR.Models;
@using SynchrotronHR.Controllers;
@Styles.Render("~/Content/JA-JD.css")
@{ 
    var jaMasterId = ViewBag.jaMasterId;
}

    <div>
        <h2><b>เพิ่มหน้าที่หลัก/กิจกรรมหลัก (Key Responsibilities and Activities)</b></h2><br />
        @using (Html.BeginForm("Add_Key", "JobAssignment", new { id = jaMasterId }, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
    <table>

        <tr>
            <td align="right">
                <label class="col-form-label">รายละเอียด:</label>
            </td>
            <td>
                &nbsp;&nbsp;&nbsp;
                <textarea name="taKeyDetails" id="taKeyDetails" style="width:400px;height:68px" required></textarea>
                <br /><br />
            </td>
        </tr>

        <tr>
            <td align="right">
                <label class="col-form-label">เป้าหมาย:</label>
            </td>
            <td>
                &nbsp;&nbsp;&nbsp;
                <textarea name="taKeyGoal" id="taKeyGoal" style="width:400px;height:68px" required></textarea>
                <br /><br />
            </td>
        </tr>

        <tr>
            <td align="right">
                <label class="col-form-label">น้ำหนัก:</label>
            </td>
            <td>
                &nbsp;&nbsp;&nbsp;
                <input type="number" step="0.01" name="txtKeyWeight" id="txtKeyWeight" style="width:75px" required />

            </td>

        </tr>

        <tr>
            <td>
                <br />
                <br />
            </td>
            <td align="right">
                <br />
                <br />
                <div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="history.go(-1); return false;" href="#">Cancel</button>
                    <button type="submit" class="btn btn-primary">OK</button>
                </div>
            </td>
        </tr>
    </table>


        }
    </div>


