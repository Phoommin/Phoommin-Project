@using GridMvc.Html
@using SynchrotronHR.Models;
@using SynchrotronHR.Controllers;
@Styles.Render("~/Content/JA-JD.css")
@{
    var jaMasterId = ViewBag.jaMasterId;
    var listkey = (JAMasterKeyResponsibilitiesDetail)ViewData["ListKey"];
}

    <div>
        <h2><b>เพิ่มหน้าที่หลัก/กิจกรรมหลัก (Key Responsibilities and Activities)</b></h2><br />
        @using (Html.BeginForm("Add_subKey", "JobAssignment", new { ja = jaMasterId, idRefSub = listkey.id, levelDisplay = listkey.levelDisplay }, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
    <table align="left">

        <tr>
            <td align="right">
                <label class="col-form-label">ภายใต้หน้าที่หลัก:</label>
            </td>
            <td>
                &nbsp;&nbsp;&nbsp;
                <textarea name="taSubKeyDetails1" id="taSubKeyDetails1" style="width:400px;height:68px" required readonly>
                    @listkey.descriptionKey
                </textarea>
                <br /><br />
            </td>
        </tr>

        <tr>
            <td align="right">
                <label class="col-form-label">รายละเอียด:</label>
            </td>
            <td>
                &nbsp;&nbsp;&nbsp;
                <textarea name="taSubKeyDetails" id="taSubKeyDetails" style="width:400px;height:68px" required></textarea>
                <br /><br />
            </td>
        </tr>

        <tr>
            <td align="right">
                <label class="col-form-label">เป้าหมาย:</label>
            </td>
            <td>
                &nbsp;&nbsp;&nbsp;
                <textarea name="taSubKeyGoal" id="taSubKeyGoal" style="width:400px;height:68px" required></textarea>
                <br /><br />
            </td>
        </tr>

        <tr>
            <td align="right">
                <label class="col-form-label">น้ำหนัก:</label>
            </td>
            <td>
                &nbsp;&nbsp;&nbsp;
                <input type="number" step="0.01" name="txtSubKeyWeight" id="txtSubKeyWeight" style="width:75px" required />

            </td>

        </tr>

        <tr>
            <td>
                <br />
                <br />
            </td>
            <td align="right">
                <br />
                <br />
                <div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="history.go(-1); return false;" href="#">Cancel</button>
                    <button type="submit" class="btn btn-primary">OK</button>
                </div>
            </td>
        </tr>
    </table>

        }
    </div>



