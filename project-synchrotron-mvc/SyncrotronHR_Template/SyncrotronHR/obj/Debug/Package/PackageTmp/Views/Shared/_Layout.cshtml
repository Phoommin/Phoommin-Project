<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Gentelella Alela! | </title>
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/Content/nprogress.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="~/Content/custom.min.css" rel="stylesheet">
    <link href="~/Content/flags.css" rel="stylesheet" />

</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="" class="site_title">
                            <img src="~/Images/logo.png" style="float:left;margin-left:-3px;" />
                            <span style="float:right;font-size:20px;margin-right:10px;">
                                SYNCHROTRON
                                @{
                                    HttpRequest req = System.Web.HttpContext.Current.Request;
                                    string browserName = req.Browser.Browser;
                                    if (browserName == "Chrome")
                                    {
                                        <span style="font-size:15px;margin-left:100px;margin-top:-40px;position: absolute;z-index:100;">Thailand.</span>
                                    }
                                    else
                                    {
                                        <span style="font-size:15px;margin-left:-60px;margin-top:20px;position: absolute;z-index:100;">Thailand.</span>
                                    }
                                }

                            </span>
                        </a>
                    </div>
                    <div class="clearfix"></div>
                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_info">
                            <h2 style="margin-top:-10px;font-size:15px;"> @Html.ActionLink(@Resources.home.HR, "Index", "Home", new { area = "" })</h2>
                        </div>
                        @*<div class="clearfix"></div>*@
                    </div>
                    <!-- /menu profile quick info -->
                    <br />
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="fa fa-user"></i> Account <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        @if (Session["EmpID"] != null)
                                        {
                                            <li>@Html.ActionLink(Session["EmpName"].ToString(), "", "")</li>
                                        }
                                        else
                                        {
                                            <li>@Html.ActionLink("Login", "LoginView", "Home")</li>
                                        }

                                            <li>@Html.ActionLink("LogOut", "Logout", "Home")</li>
                                        </ul>
                                </li>

                                <li>
                                    <a><i class="fa fa-home"></i> @Resources.home.Home <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li>@Html.ActionLink(Resources.Languages.Home, "Index", "Home")</li>
                                        <li>@Html.ActionLink(Resources.Languages.About, "About", "Home")</li>
                                        <li>@Html.ActionLink(Resources.Languages.Contact, "Contact", "Home")</li>
                                    </ul>
                                </li>
                                @if (Session["EmpID"] != null)
                                {
                                    <li>
                                        <a><i class="fa fa-desktop"></i> Job Description-Agreement  <span class="fa fa-chevron-down"></span></a>
                                        <ul class="nav child_menu">
                                            <li>@Html.ActionLink("Job Description", "JDSearch", "JobDescription")</li>
                                            <li>@Html.ActionLink("Job Agreement", "JaSearch", "JobAssignment")</li>
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </div>

                    </div>
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">
                        <a data-toggle="tooltip" data-placement="top" title="Settings">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="FullScreen">
                            <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Lock">
                            <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Logout" href="login.html">
                            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                        </a>
                    </div>
                    <!-- /menu footer buttons -->
                </div>
            </div>
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="" style="margin-bottom:12px;margin-top:12px;margin-right:15px;min-width:800px;text-align:right;">
                                <ul style="margin-bottom:12px;margin-top:12px;text-align:right;">
                                    <li style="margin-right:10px">
                                        <a href='@Url.Action("Change", @ViewBag.Title, new { lang = "En", pages = @ViewBag.Pages, id = ViewContext.RouteData.Values["id"]?.ToString()}, null)'>
                                            <img src='@Url.Content("~/Images/blank.gif")' class="flag flag-gb" alt="English" />
                                        </a>
                                    </li>
                                    <li style="margin-right:10px;margin-left:10px">
                                        <a href='@Url.Action("Change", @ViewBag.Title, new { lang = "th", pages = @ViewBag.Pages, id = ViewContext.RouteData.Values["id"]?.ToString()}, null)'>
                                            <img src='@Url.Content("~/Images/blank.gif")' class="flag flag-th" alt="ไทย" />
                                        </a>
                                    </li>
                                </ul>
                                @*@Html.Partial("_LoginPartial")*@
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    @*<div class="page-title">
                        <div class="title_left">
                            <h3>Plain Page</h3>
                        </div>
                        <div class="title_right">
                            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search for...">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">Go!</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>*@
                    <div class="clearfix"></div>
                    
                    @RenderBody()
                </div>
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    <a href="#">Copy Right &copy;2018 ระบบสารสนเทศเพื่อการบริหารจัดการ Human Resource Management System</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>
    <!-- jQuery -->
    <script type="text/javascript" src="@Url.Content("/Scripts/jquery.min.js")"></script>
    <!-- Bootstrap -->
    <script type="text/javascript" src="@Url.Content("/Scripts/bootstrap.min.js")"></script>

    <!-- FastClick -->
    <script type="text/javascript" src="@Url.Content("/Scripts/fastclick.js")"></script>

    <!-- NProgress -->
    <script type="text/javascript" src="@Url.Content("/Scripts/nprogress.js")"></script>

    <!-- Custom Theme Scripts -->
    <script type="text/javascript" src="@Url.Content("/Scripts/custom.min.js")"></script>
</body>
</html>
