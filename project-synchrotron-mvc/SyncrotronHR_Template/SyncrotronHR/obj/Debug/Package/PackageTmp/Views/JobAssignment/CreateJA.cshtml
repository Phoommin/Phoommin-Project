                                <table border="0" align="center" width="100%" class="table">
                                    <thead>
                                        <tr>
                                            <td width="400" class="auto-style1" align="center" bgcolor="#D3D3D3">รายละเอียด</td>
                                            <td width="100" class="auto-style1" align="center" bgcolor="#D3D3D3"></td>
