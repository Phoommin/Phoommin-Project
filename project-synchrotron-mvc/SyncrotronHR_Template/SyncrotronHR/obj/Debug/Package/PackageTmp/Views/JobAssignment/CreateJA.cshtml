                                @Html.ActionLink("Add New", "AddSecondaryView", "JobAssignment", new { id = jat.id }, new { enctype = "multipart/form-data", @class = "btn btn-warning", @style = "border-radius: 20px 20px 20px 20px; box-shadow: 5px 5px 20px #00000029;" })
                            </td>
