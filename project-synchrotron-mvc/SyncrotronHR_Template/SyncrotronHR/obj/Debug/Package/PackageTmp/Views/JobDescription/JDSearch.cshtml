@model IEnumerable<SynchrotronHR.Models.ViewModel>
@using SynchrotronHR.Models;
@using SynchrotronHR.Controllers;
@{

    ViewBag.Title = "Job Description";
    var jdt = ViewBag.jdSearchDetails;                     //(JdSearch)ViewData["jdSearchDetails"];
}
<div align="center">
    <table align="center" width="100%" border="0">

        <tr>
            <td colspan="6" align="center" class="auto-style1"><img style="width: 200px; height: 120px;" src="~/Images/syn_logo.png" /></td>
        </tr>

        <tr>
            <td colspan="6" align="center" class="auto-style1"><h4>แบบการกำหนดหน้าที่งาน (Job Description)<br />สถาบันวิจัยแสงซินโครตรอน (องค์การมหาชน)<br /><br /></h4></td>
        </tr>

        <tr>
            <td colspan="6">
                <table border="0" align="center">

                    <tr>
                        <td colspan="6" align="left" class="auto-style1">
                            <b>1) รายละเอียดของตำแหน่ง </b> (Position) <br /><br />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <table border="1" align="center" class="gray">

                                <tr>
                                    <td width="200" class="auto-style1" align="left" height="35" bgcolor="#D3D3D3">&nbsp;&nbsp;ชื่อ-นามสกุล</td>
                                    <td width="500" class="auto-style1" colspan="3">&nbsp;&nbsp; @jdt.employees.TitleTH@jdt.employees.FirstNameTH &nbsp;&nbsp; @jdt.employees.LastNameTH &nbsp;&nbsp;</td>


                                </tr>

                                <tr>
                                    <td width="200" class="auto-style1" align="left" height="35" bgcolor="#D3D3D3">&nbsp;&nbsp;ชื่อตำแหน่ง</td>
                                    <td width="500" class="auto-style1" colspan="3">&nbsp;&nbsp; @jdt.employees.Position</td>


                                </tr>

                                <tr>
                                    <td width="200" class="auto-style1" align="left" height="35" bgcolor="#D3D3D3">&nbsp;&nbsp;ชื่อส่วนงาน</td>
                                    <td width="500" class="auto-style1" colspan="3">&nbsp;&nbsp; @jdt.employees.Sector</td>

                                </tr>

                                <tr>
                                    <td width="200" class="auto-style1" align="left" height="35" bgcolor="#D3D3D3">&nbsp;&nbsp;ชื่อฝ่าย</td>
                                    <td width="300" class="auto-style1">&nbsp;&nbsp; @jdt.employees.Department</td>
                                    <td width="100" class="auto-style1" bgcolor="#D3D3D3">&nbsp;&nbsp;วันที่จัดทำ</td>
                                    <td width="100" class="auto-style1"></td>
                                </tr>

                            </table>
                            <br />
                        </td>
                    </tr>

                    <tr>
                        <td colspan="6" align="left" class="auto-style1">
                            <b>แบบการกำหนดหน้าที่งาน (Job Description)</b> <br /><br />
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <table border="0" align="center">
                                <thead>
                                    <tr>
                                        <td height="35" width="650" class="auto-style1" align="center" bgcolor="#D3D3D3">รายละเอียด</td>
                                        <td height="35" width="50" class="auto-style1" align="center" bgcolor="#D3D3D3"></td>
                                    </tr>
                                </thead>
                                    @foreach (ViewModel K in ViewBag.jdSearchDetailsList)
                                    {
                                        <tr>
                                            <td height="50">&nbsp;&nbsp; @K.jdMaster.jdPosition</td>
                                            <td height="50" align="center">
                                                @Html.ActionLink("Detail", "JD", "JobDescription", new { jdId = K.jdMaster.id }, new { enctype = "multipart/form-data", @class = "btn btn-warning", @style = "border-radius: 20px 20px 20px 20px; box-shadow: 5px 5px 20px #00000029;" })
                                            </td>
                                        </tr>
                                    }
                            </table>
                            <br />
                        </td>
                    </tr>
                </table>
</div>


